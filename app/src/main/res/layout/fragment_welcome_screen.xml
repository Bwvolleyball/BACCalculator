<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="brillianceanimationstudio.brandonward.baccalculator.WelcomeScreenFragment"
    android:background="#ff000000"
    android:id="@+id/mainMenuFrame">
 <!-- TODO Make words white, not red -->
<!-- TODO trim white edges of redBtn.9.png -->
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/title_img"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate My Blood Alcohol Content!"
        android:id="@+id/quickCalculate"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:typeface="serif"
        android:background="@drawable/red_button"
        android:layout_weight="15"
        android:textColor="#ffffffff" />

    </LinearLayout>
   </LinearLayout>
</FrameLayout>
